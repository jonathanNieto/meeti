<!DOCTYPE html>
<html lang="en">

<head>
    <title>Meeti - <%- pagename %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.1/normalize.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css" />
    <!-- Load Esri Leaflet Geocoder from CDN -->
    <link rel="stylesheet" href="https://unpkg.com/esri-leaflet-geocoder@2.2.14/dist/esri-leaflet-geocoder.css"
        integrity="sha512-v5YmWLm8KqAAmg5808pETiccEohtt8rPVMGQ1jA6jqkWVydV5Cuz3nJ9fQ7ittSxvuqsvI9RSGfVoKPaAJZ/AQ=="
        crossorigin="">
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,700,900|Staatliches&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.css">
    <link rel="stylesheet" href="/css/trix.css">
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>
    <header class="site-header contenedor">
        <a href="/">
            <img src="/img/logo.png" alt="Logo Meeti">
        </a>
        <nav class="nav">
            <% if (locals.user._id) { %>
            <% include partials/nav_authenticated.ejs %>
            <% } else { %>
            <% include partials/nav_not_authenticated.ejs %>
            <% } %>
        </nav>
    </header>
    <%- messages('my_message_template', locals) %>

    <div id="messages">
        <% Object.keys(messages).forEach(function (type) { %>
        <% messages[type].forEach(function (message) { %>
        <div class="alertas">
            <p class="alerta <%= type %>">
                <%= message %>
            </p>
        </div>
        <% }) %>
        <% }) %>
    </div>

    <%- body %>

    <footer class="site-footer contenedor">
        <nav class="nav">
            <a href="#">Crear Grupo</a>
            <a href="/login">Iniciar Sesi√≥n</a>
            <a href="/user/create-account">Registrarse</a>
        </nav>
        <p class="copyright">Todos los derechos reservados <%- year %> &copy; </p>
    </footer>

    <script src="/js/trix.js"></script>
    <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js"></script>
    <script src="https://unpkg.com/esri-leaflet@2.3.0/dist/esri-leaflet.js"
        integrity="sha512-1tScwpjXwwnm6tTva0l0/ZgM3rYNbdyMj5q6RSQMbNX6EUMhYDE3pMRGZaT41zHEvLoWEK7qFEJmZDOoDMU7/Q=="
        crossorigin=""></script>
    <script src="https://unpkg.com/esri-leaflet-geocoder@2.2.14/dist/esri-leaflet-geocoder.js"
        integrity="sha512-uK5jVwR81KVTGe8KpJa1QIN4n60TsSV8+DPbL5wWlYQvb0/nYNgSOg9dZG6ViQhwx/gaMszuWllTemL+K+IXjg=="
        crossorigin=""></script>
    <% if (user._id) { %>
    <script src="/dist/bundle.js"></script>    
    <% } %>    
    <script src="/js/meeti.js"></script>    
</body>

</html>