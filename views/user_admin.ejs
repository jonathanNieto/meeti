<main class="contenedor panel-administracion">
    <h1><%= pagename %></h1>

    <div class="contenedor-botones">
        <a href="/user/new-group" class="btn-sm btn-amarillo">Nuevo Grupo</a>
        <a href="/user/new-meeti" class="btn-sm btn-azul">Nuevo Meeti</a>
        <a href="/edit-profile" class="btn-sm btn-rosa">Editar Perfil</a>
        <a href="/change-password" class="btn-sm btn-verde">Cambiar Contraseña</a>
        <a href="/image-profile" class="btn-sm btn-amarillo">Imagen Perfil</a>
    </div>

    <div class="seccion-admin meetis">
        <h2>Próximos Meeti's</h2>
        <% if(meetis.length ) { %>
        <div class="grid-container">
            <% moment.locale('es-us') %>
            <% meetis.forEach(meeti => { %>
            <div class="grid-item">
                <h4>
                    <a href="/meeti/<%= meeti.slug %>" target="_blank">
                        <%= meeti.name %>
                    </a>
                </h4>
                <p class="fecha"><%= moment(meeti.date).format('LLLL') %></p>
                <small><%= meeti.quota %> Asistentes</small>
                <div class="btns-sm">
                    <a href="/user/edit-meeti/<%= meeti.id %>" class="btn-sm btn-verde"><i
                            class="far fa-edit"></i>&nbsp;Editar</a>
                    <a href="/user/attendees-meeti/<%= meeti.id %>" class="btn-sm btn-azul2">
                        <i class="fas fa-users"></i>&nbsp; Asistentes</a>
                    <a href="#" data-delete="<%= meeti.id %>" class="btn-sm btn-rojo"><i
                            class="far fa-trash-alt"></i>&nbsp;Eliminar</a>
                </div>
            </div>
            <% }) %>
        </div>
        <% } else { %>
        <p>No tienes un meeti creado</p>
        <% } %>
    </div>
    <div class="seccion-admin groups">
        <h2>Tus Grupos</h2>
        <% if(groups.length ) { %>
        <div class="grid-container">
            <% groups.forEach(group => { %>
            <div class="grid-item">
                <h4 title="<%= group.name %>"><%= group.name %></h4>
                <a href="/user/image-group/<%= group.id %>" class="">
                    <% if(group.image ) { %>
                    <img src="/uploads/groups/<%= group.image %>" alt="<%= group.name %>">
                    <% } else { %>
                    <img src="/img/no-image.png" alt="<%= group.name %>">
                    <% } %>
                </a>
                <div class="btns-sm">
                    <a href="/user/edit-group/<%= group.id %>" class="btn-sm btn-verde"><i
                            class="far fa-edit"></i>&nbsp;Editar</a>
                    <a href="#" data-delete="<%= group.id %>" class="btn-sm btn-rojo"><i
                            class="far fa-trash-alt"></i>&nbsp;Eliminar</a>
                </div>
            </div>
            <% }) %>
        </div>
        <% } else { %>
        <p>No tienes un grupo creado</p>
        <% } %>
    </div>

    <div class="seccion-admin oldmeetis">
        <h2>Anteriores Meeti's</h2>
        <% if(meetis.length ) { %>
        <div class="grid-container">
            <% moment.locale('es-us') %>
            <% oldMeetis.forEach(meeti => { %>
            <div class="grid-item">
                <h4 title="<%= meeti.name %>"><%= meeti.name %></h4>
                <p class="fecha"><%= moment(meeti.date).format('LLLL') %></p>
                <small><%= meeti.quota %> Asistentes</small>
                <div class="btns-sm">
                    <a href="/user/edit-meeti/<%= meeti.id %>" class="btn-sm btn-verde"><i
                            class="far fa-edit"></i>&nbsp;Editar</a>
                    <a href="/user/attendees-meeti/<%= meeti.id %>" class="btn-sm btn-azul2">
                        <i class="fas fa-users"></i>&nbsp; Asistentes</a>
                    <a href="#" data-delete="<%= meeti.id %>" class="btn-sm btn-rojo"><i
                            class="far fa-trash-alt"></i>&nbsp;Eliminar</a>
                </div>
            </div>
            <% }) %>
        </div>
        <% } else { %>
        <p>No tienes meetis anteriores</p>
        <% } %>
    </div>

</main>