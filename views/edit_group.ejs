<main class="contenedor contenedor-formularios no-padding">
    <h1><%= pagename %></h1>

    <form class="default-form" method="POST">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" value="<%= group.name %>" name="name" placeholder="Nombre Grupo">
        </div>

        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" value="<%= group.description %>" name="description">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Categoría</label>
            <select name="category">
                <option value="" selected disabled>-- Elige una categoria --</option>
                <% categories.forEach(category => { %>
                    <option 
                        value="<%= category._id %>"
                        <%- (group.category.equals(category._id)) ? "selected" : "" %>
                    >
                        <%= category.name %>
                    </option>
                <% }) %>
            </select>
        </div>
        <div class="campo">
            <label>Sitio Web</label>
            <input type="url"  value="<%= group.websiteUrl %>" name="websiteUrl" placeholder="Sitio Web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Actualizar Grupo" class="btn btn-rosa">
        </div>
    </form>
</main>