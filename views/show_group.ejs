<div class="contenedor">
    <h1><%= pagename %></h1>
    <div class="informacion-grupo">
        <div class="imagen">
            <% if(group.image) { %>
            <img src="/uploads/groups/<%= group.image %>">
            <% } else { %>
            <img src="/img/meeti.jpg">
            <% } %>
        </div>
        <div class="texto">
            <%- group.description %>

            <% if(group.websiteUrl) { %>
            <a target="_blank" class="url" href="<%- group.websiteUrl %>">Visita nuestro sitio web</a>
            <% } %>

            <% if(meetis.length > 0 ) { %>
            <h2>Pr√≥ximos Meeti's</h2>
            <ul class="lista-meetis">
                <% meetis.forEach(meeti => { %>
                <li>
                    <div class="texto">
                        <a href="/meeti/<%= meeti.slug %>">
                            <h3><%= meeti.name %></h3>

                            <% moment.locale('es-us'); %>
                            <p class="fecha"><%= moment(meeti.date).format('LLLL') %></p>
                        </a>
                    </div>
                </li>
                <% }) %>
            </ul>
            <% } %>
        </div>
    </div>
</div>