<main class="contenedor contenedor-formularios">
    <h1><%- pagename %></h1>
    <form class="default-form" action="/user/new-meeti" method="POST">
        <legend>Sobre el Meeti</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="group">
                <option value="" disabled selected>-- Selecciona Grupo --</option>
                <% if(groups.length > 0) { %>
                <% groups.forEach(group => { %>
                <option value="<%= group._id %>"><%= group.name %></option>
                <% }) %>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="name" placeholder="Titulo Meeti">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" name="guest" placeholder="Nombre Invitado o Ponente (si aplica)">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="date" placeholder="Fecha Meeti">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="hora" placeholder="Hora Meeti">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" name="quota" placeholder="Cupo Meeti (si aplica)">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <legend>Ubicación Meeti</legend>
        <div class="campo buscador">
            <label>Dirección del Meeti</label>
            <div class="contenedor-input">
                <input type="text" id="formbuscador" placeholder="Escribe la dirección del meeti">
                <small>El asistente colocará una dirección estimada</small>
            </div>
        </div>
        <div class="campo mapa">
            <div id="mapa"></div>
            <p class="informacion">Mueve el pin hacia el punto exacto en caso de ser necesario.</p>
        </div>
        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>
        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="direccion" name="address" placeholder="Dirección">
        </div>
        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="city" placeholder="Ciudad">
        </div>
        <div class="campo">
            <label>Estado</label>
            <input type="text" id="estado" name="state" placeholder="Estado">
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="pais" name="country" placeholder="País">
        </div>
        <input type="text" id="lat" name="lat" hidden>
        <input type="text" id="lng" name="lng" hidden>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Crear Meeti">
        </div>
    </form>
</main>